<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".ConnectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-12dp"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_height="250dp"
                android:layout_width="170dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart= "130dp"
                android:layout_marginTop="22dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:srcCompat="@drawable/logo_tutorial"/>

            <TextView
                android:id="@+id/textIntro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="104dp"
                android:layout_marginTop="235dp"
                android:text="myBanany is a tool"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textIntro2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="269dp"
                android:layout_gravity="center"
                android:text="that connects your phone"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textIntro3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="95dp"
                android:layout_marginTop="300dp"
                android:text="to the Banany device"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textIntro4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginStart="145dp"
                android:layout_marginTop="330dp"
                android:text="via Network"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="80dp"
                android:layout_marginTop="390dp"
                android:background="@drawable/wadah_button"
                android:text="Connect To Banany Device"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="16dp" />
        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>